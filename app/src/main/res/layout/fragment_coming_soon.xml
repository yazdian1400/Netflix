<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_soon_1"
        style="@style/style_constraint_view_2">

        <ImageView
            android:id="@+id/iv_soon_1"
            style="@style/style_image_view_3"
            app:layout_constraintBottom_toBottomOf="@+id/cl_soon_1"
            app:layout_constraintTop_toTopOf="@+id/cl_soon_1"
            app:layout_constraintStart_toStartOf="@+id/cl_soon_1"
            tools:src="@drawable/okhtapos" />

        <ImageView
            android:id="@+id/iv_share_1"
            style="@style/style_image_view_2"
            android:src="@drawable/ic_baseline_share_24"
            app:layout_constraintBottom_toBottomOf="@id/iv_soon_1"
            app:layout_constraintEnd_toEndOf="@id/iv_soon_1"/>

        <TextView
            android:id="@+id/tv_soon_1"
            style="@style/style_text_view_2"
            app:layout_constraintBottom_toBottomOf="@id/cl_soon_1"
            app:layout_constraintStart_toEndOf="@id/gl_soon_v_50_3"
            app:layout_constraintTop_toTopOf="@id/cl_soon_1"
            tools:text="عنوان فیلم" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_soon_v_50_3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_soon_2"
        style="@style/style_constraint_view_2">

        <ImageView
            android:id="@+id/iv_soon_2"
            style="@style/style_image_view_3"
            app:layout_constraintBottom_toBottomOf="@+id/cl_soon_2"
            app:layout_constraintTop_toTopOf="@+id/cl_soon_2"
            app:layout_constraintStart_toStartOf="@+id/cl_soon_2"
            tools:src="@drawable/okhtapos" />

        <ImageView
            android:id="@+id/iv_share_2"
            style="@style/style_image_view_2"
            android:src="@drawable/ic_baseline_share_24"
            app:layout_constraintBottom_toBottomOf="@id/iv_soon_2"
            app:layout_constraintEnd_toEndOf="@id/iv_soon_2"/>

        <TextView
            android:id="@+id/tv_soon_2"
            style="@style/style_text_view_2"
            app:layout_constraintBottom_toBottomOf="@id/cl_soon_2"
            app:layout_constraintStart_toEndOf="@id/gl_soon_v_50_2"
            app:layout_constraintTop_toTopOf="@id/cl_soon_2"
            tools:text="عنوان فیلم" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_soon_v_50_2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_soon_3"
        style="@style/style_constraint_view_2">
        <ImageView
            android:id="@+id/iv_soon_3"
            style="@style/style_image_view_3"
            app:layout_constraintBottom_toBottomOf="@+id/cl_soon_3"
            app:layout_constraintTop_toTopOf="@+id/cl_soon_3"
            app:layout_constraintStart_toStartOf="@+id/cl_soon_3"
            tools:src="@drawable/okhtapos" />

        <ImageView
            android:id="@+id/iv_share_3"
            style="@style/style_image_view_2"
            android:src="@drawable/ic_baseline_share_24"
            app:layout_constraintBottom_toBottomOf="@id/iv_soon_3"
            app:layout_constraintEnd_toEndOf="@id/iv_soon_3"/>

        <TextView
            android:id="@+id/tv_soon_3"
            style="@style/style_text_view_2"
            app:layout_constraintBottom_toBottomOf="@id/cl_soon_3"
            app:layout_constraintStart_toEndOf="@id/gl_soon_v_50"
            app:layout_constraintTop_toTopOf="@id/cl_soon_3"
            tools:text="عنوان فیلم"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_soon_v_50"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>